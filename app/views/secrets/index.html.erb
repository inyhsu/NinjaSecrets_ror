<% @secrets.each do |s|%>
    <%= s.content %>
    <% if s.user == current_user %>
        <a href="secrets/<%= s.id %>" data-method="delete"><button>Delete</button></a>
    <% end %>
    <br>
    <%= s.likes.count %> Likes <br>

    <% if s.users.include?(current_user) %>
        <a href="likes/<%= s.id %>" data-method="delete"><button>Unlike</button></a><br>
    <% else %>
        <form action="likes/<%= s.id %>" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type='submit' value='Like'>
        </form>
    <% end %>
<%end%>
